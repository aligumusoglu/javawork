  <body>
      <div class="container">
          <div class="row">
              <div class="col-md-6 col-md-offset-3">
                  <div class="panel panel-default login">
                    <div class="panel-heading">
                      <h3 class="panel-title">Parolayı Sıfırla</h3>
                    </div>
                    <div class="panel-body">
                          <form action="reset_sent.html" class="form-horizontal" role="form">
                            <div class="form-group">
                              <label for="inputEmail" class="col-sm-3 control-label">Email Adresi</label>
                              <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputEmail" placeholder="Email adresi">
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-default">Gönder</button>
                              </div>
                            </div>
                          </form>
                    </div>
                  </div>                  
              </div>
          </div>

          <div class="row">
              <div class="col-md-6 col-md-offset-3">
                  <div class="panel panel-default login">
                    <div class="panel-heading">
                      <h3 class="panel-title">Parolayı Sıfırla</h3>
                    </div>
                    <div class="panel-body">
                          <form action="reset_sent.html" class="form-horizontal" role="form">
                            <div class="alert alert-danger" role="alert">Email adresini hatalı girdiniz.</div>
                            <div class="form-group has-error">
                              <label for="inputEmail" class="col-sm-3 control-label">Email Adresi</label>
                              <div class="col-sm-9">
                                <input type="email" class="form-control" id="inputEmail" placeholder="Email adresi">
                              </div>
                            </div>
                            <div class="form-group">
                              <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-default">Gönder</button>
                              </div>
                            </div>
                          </form>
                    </div>
                  </div>                  
              </div>
          </div>
      </div>
      
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="assets/bs/js/bootstrap.min.js"></script>
  </body>
</html>